<h1>Listing releases</h1>

<table class ="table table-striped table-bordered table-condensed" >
  <tr>
    <th>Release id</th>
    <th>Project id</th>
    <th>Release start date</th>
    <th>Release end date</th>
    <th>Release status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @releases.each do |release| %>
  <tr>
    <td><%= release.release_ID %></td>
    <td><%= release.project_ID %></td>
    <td><%= release.release_start_date %></td>
    <td><%= release.release_end_date %></td>
    <td><%= release.release_status %></td>
    <td><%= link_to 'Show', release %></td>
    <td><%= link_to 'Edit', edit_release_path(release) %></td>
    <td><%= link_to 'Destroy', release, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

